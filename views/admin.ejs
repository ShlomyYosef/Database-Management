<h1>Remove from list</h1>
<br />
<div>
  <table cellspacing="10">
    <h4>remove client from the list by clicking on the checkbox</h4>
    <tr>
      <th>Name</th>
      <th>Delete</th>
    </tr>
    <% usersList.forEach(function(user) { %>
    <tr> <% if (user.username != "Admin") { %>
      <form action="/admin" method="post">
        <td><%= user.username %></td>
        <td>
          <input
            type="checkbox"
            name="checkbox"
            onchange="this.form.submit()"
            value="<%= user._id %>"
          />
          <label for="checkbox"><img src="delete.ico" /></label>
        </td>
      </form>
    </tr>
    <% }}); %>
  </table>
</div>
