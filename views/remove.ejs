<%- include("components/header") -%> <%- include("components/navbar") -%>
<h1>Remove from list</h1>
<br />
<div>
  <table cellspacing="10">
    <h4>remove client from the list by click on the checkbox</h4>
    <tr>
      <th>Name</th>
      <th>ID</th>
      <th>IP</th>
      <th>Phone</th>
      <th>Country</th>
      <th>City</th>
      <th>Delete</th>
    </tr>
    <% clientList.forEach(function(client) { %>
    <tr>
      <form action="/remove" method="post">
        <td><%= client.Name %></td>
        <td><%= client.ID %></td>
        <td><%= client.IP %></td>
        <td><%= client.Phone %></td>
        <td><%= client.Country %></td>
        <td><%= client.City %></td>
        <td>
          <input
            type="checkbox"
            name="checkbox"
            onchange="this.form.submit()"
            value="<%= client._id %>"
          />
          <label for="checkbox"><img src="delete.ico" /></label>
        </td>
      </form>
    </tr>
    <% }); %>
  </table>
</div>
<br />
